<h2 class="mb-4">{{titulo_pagina}}</h2>

{{#if notas.length}}
<div class="table-responsive">
  <table class="table table-hover table-bordered">
    <thead class="table-light text-center">
      <tr>
        <th style="width: 10%">ID</th>
        <th>Título</th>
        <th style="width: 15%">Importância</th>
      </tr>
    </thead>
    <tbody>
      {{#each notas}}
      <tr>
        <td class="text-center">{{this.id}}</td>
        <td>
          <a href="/nota/consulta/{{this.id}}" class="text-decoration-none fw-bold">
            {{this.titulo}}
          </a>
        </td>
        <td class="text-center">
          <span class="badge rounded-pill bg-danger">{{this.importancia}}</span>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
{{else}}
<div class="alert alert-info shadow-sm">
  <i class="bi bi-info-circle"></i> Ainda não há notas importantes (nível 4 ou 5) no momento.
</div>
{{/if}}

<div class="mt-3">
  <a href="/" class="btn btn-secondary">Voltar para Home</a>
</div>
