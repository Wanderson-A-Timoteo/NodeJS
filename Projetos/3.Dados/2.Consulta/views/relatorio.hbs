<div class="container">
    <h2 class="mb-4"><i class="bi bi-bar-chart-line"></i> Relatório de Dados Cadastrados</h2>

    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <h5 class="card-title border-bottom pb-2">Resumo Geral</h5>
            <div class="row text-center mt-3">
                <div class="col-md-4">
                    <h3>{{totalUsuarios}}</h3>
                    <p class="text-muted">Usuários Cadastrados</p>
                </div>
                <div class="col-md-4">
                    <h3>{{totalNotas}}</h3>
                    <p class="text-muted">Notas Cadastradas</p>
                </div>
                <div class="col-md-4">
                    <h3>{{totalTags}}</h3>
                    <p class="text-muted">Tags Cadastradas</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light">
                    <strong>Número de Notas por Usuário</strong>
                </div>
                <ul class="list-group list-group-flush">
                    {{#each dadosUsuarios}}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-person"></i> {{this.nome}}</span>
                        <span class="badge bg-primary rounded-pill">{{this.qtd}}</span>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light">
                    <strong>Número de Notas por Tag</strong>
                </div>
                <ul class="list-group list-group-flush">
                    {{#each dadosTags}}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span style="color: {{this.cor}}"><i class="bi bi-tag-fill"></i> {{this.tag}}</span>
                        <span class="badge bg-secondary rounded-pill">{{this.qtd}}</span>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a href="/" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar para Home
        </a>
    </div>
</div>
