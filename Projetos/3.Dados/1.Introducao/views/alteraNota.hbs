<div class="row justify-content-center">
  <div class="col-md-8">
    <h2 class="mb-4">Alteração de nota</h2>

    <form method='POST' action='/nota/altera/{{id}}'>
      <div class="row mb-3">
        <div class="col-md-8">
          <label for="id" class="form-label">Chave</label>
          <input type="text" class="form-control" name="id" id="id" value="{{id}}" readonly>
        </div>
        <div class="col-md-4">
          <label for="importancia" class="form-label">Importância</label>
          <input type="number" class="form-control" name="importancia" id="importancia" min="1" max="5"
            value="{{importancia}}">
        </div>
      </div>

      <div class="mb-3">
        <label for="titulo" class="form-label">Título</label>
        <input type="text" class="form-control" name="titulo" id="titulo" value="{{titulo}}">
      </div>

      <div class="mb-4">
        <label for="texto" class="form-label">Texto da Nota</label>
        <textarea class="form-control" name="texto" id="texto" rows="5">{{texto}}</textarea>
      </div>

      <div class="mb-3 form-check">
        <input type="checkbox" class="form-check-input" id="lidaCheck" disabled {{#if lida}}checked{{/if}}>
        <label class="form-check-label" for="lidaCheck">Nota Lida</label>
      </div>

      <button type="submit" class="btn btn-success">Alterar</button>
      <a href="/nota/consulta/{{id}}" class="btn btn-secondary">Cancelar</a>
    </form>
  </div>
</div>
