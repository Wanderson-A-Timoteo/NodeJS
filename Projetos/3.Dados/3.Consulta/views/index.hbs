<h1>Notas</h1>

{{#if notas.length}}
<div class="table-responsive">
  <table class="table table-hover">
    <thead class="table-primary text-center">
      <tr>
        <th style="width: 25%;">ID</th> 
        <th>Título</th>
        <th style="width: 15%;">Status / Ação</th>
      </tr>
    </thead>
    <tbody>
      {{#each notas}}
      <tr>
        <td class="text-center align-middle text-muted small">{{this._id}}</td>
        
        <td class="align-middle">
          {{#if this.lida}}
            <a href="/nota/consulta/{{this._id}}" class="text-decoration-none text-dark">{{this.titulo}}</a>
          {{else}}
            <b><a href="/nota/consulta/{{this._id}}" class="text-decoration-none text-dark">{{this.titulo}}</a></b>
          {{/if}}
        </td>
        
        <td class="text-center align-middle">
          {{#if this.lida}}
            <a href="/nota/naolida/{{this._id}}" class="btn btn-outline-secondary btn-sm" title="Marcar como Não Lida">
              <i class="bi bi-envelope-open"></i>
            </a>
          {{else}}
            <a href="/nota/lida/{{this._id}}" class="btn btn-primary btn-sm" title="Marcar como Lida">
              <i class="bi bi-envelope-fill"></i>
            </a>
          {{/if}}
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

{{else}}
<br><br>

{{#if termo}}
  <div class="alert alert-warning text-center shadow-sm">
    Sem resultados para a pesquisa realizada: "<strong>{{termo}}</strong>"
  </div>
  <div class="text-center mt-3">
    <a href="/" class="btn btn-secondary">
      <i class="bi bi-x-circle"></i> Limpar Pesquisa
    </a>
  </div>

{{else}}
  <div class="text-center text-muted">
    <h3><i class="bi bi-inbox"></i> Ainda não há nenhuma nota cadastrada.</h3>
    <p class="mt-3">
      <a href="/nota/cria" class="btn btn-primary ms-2">Cadastre a sua primeira nota</a>
    </p>
  </div>
{{/if}}

{{/if}}
