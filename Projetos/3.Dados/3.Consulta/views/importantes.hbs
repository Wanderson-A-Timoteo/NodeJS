<h2 class="mb-4">{{titulo_pagina}}</h2>

{{#if notas.length}}
<div class="table-responsive">
    <table class="table table-hover table-bordered">
        <thead class="table-light text-center">
            <tr>
                <th style="width: 25%">ID</th>
                <th>Título</th>
                <th style="width: 15%">Importância</th>
            </tr>
        </thead>
        <tbody>
            {{#each notas}}
            <tr>
                <td class="text-center align-middle text-muted small">{{this._id}}</td>
                
                <td class="align-middle">
                    <a href="/nota/consulta/{{this._id}}" class="text-decoration-none fw-bold text-dark">
                        {{this.titulo}}
                    </a>
                </td>
                
                <td class="text-center align-middle">
                    <span class="badge rounded-pill bg-danger fs-6">
                        {{this.importancia}}
                    </span>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
{{else}}
    <div class="alert alert-info shadow-sm mt-3">
        <i class="bi bi-info-circle"></i> Ainda não há notas importantes (nível 4 ou 5) cadastradas.
    </div>
{{/if}}

<div class="mt-3">
    <a href="/" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Voltar para Home
    </a>
</div>
