<div class="container">
    <h2 class="mb-4"><i class="bi bi-bar-chart-line"></i> {{titulo_pagina}}</h2>

    <div class="card mb-4 shadow-sm">
        <div class="card-body text-center">
            <h5 class="card-title text-muted">Notas Cadastradas</h5>
            <h1 class="display-4 fw-bold">{{totalNotas}}</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-light">
                    <strong><i class="bi bi-exclamation-triangle"></i> Número de Notas por Importância</strong>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Nível 1 <span class="badge bg-secondary rounded-pill">{{imp.imp1}}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Nível 2 <span class="badge bg-secondary rounded-pill">{{imp.imp2}}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Nível 3 <span class="badge bg-warning text-dark rounded-pill">{{imp.imp3}}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Nível 4 <span class="badge bg-warning text-dark rounded-pill">{{imp.imp4}}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Nível 5 <span class="badge bg-danger rounded-pill">{{imp.imp5}}</span>
                    </li>
                </ul>
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-light">
                    <strong><i class="bi bi-check2-square"></i> Número de Notas por Status</strong>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span class="text-danger"><i class="bi bi-envelope-open"></i> Não Lida</span>
                        <span class="badge bg-danger rounded-pill">{{status.naolidas}}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span class="text-success"><i class="bi bi-envelope-fill"></i> Lida</span>
                        <span class="badge bg-success rounded-pill">{{status.lidas}}</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a href="/" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar para Home
        </a>
    </div>
</div>
